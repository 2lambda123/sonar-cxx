      </dependency>
      <dependency>
        <groupId>pmd</groupId>
        <artifactId>pmd</artifactId>
        <version>4.2.5</version>
        <scope>compile</scope>
        <exclusions>
          <exclusion>
            <groupId>jaxen</groupId>
            <artifactId>jaxen</artifactId>
          </exclusion>
          <exclusion>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
          </exclusion>
          <exclusion>
